@model LogisticsApp.Models.SettingsViewModel

@{
    Layout = "~/Views/Home/AdminPanel.cshtml";
    
}

<div id="AdminSettings">

    @using (Html.BeginForm("Edit", "Settings", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.ServiceTax, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ServiceTax, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.ServiceTax, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.UrgencyTax, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UrgencyTax, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.UrgencyTax, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.valutas, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-10" style="display:flex;justify-content:space-between">
                @foreach (var item in Model.valutas)
                {
                    <div>
                        <span><b>1 @item.Name =</b></span>
                        <input type="number" name="valuta-@item.Name" class="form-control" value="@item.Value" min="0.01" step="0.01" required="required" style="width:40%;display:inline-block" /> AZN
                    </div>
                }
            </div>
        </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Logo, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Logo, new { htmlAttributes = new { @class = "form-control", @type = "file" } })
                    @Html.ValidationMessageFor(model => model.Logo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <img src="@Model.Logo" alt="no picture yet" width="30%" height="30%" />
            </div>

            <div class="form-group">
                <button type="submit" id="" class="btn btn-primary" data-id="">Save</button>
            </div>
            }


        </div>

