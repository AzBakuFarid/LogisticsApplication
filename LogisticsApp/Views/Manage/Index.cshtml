
@{
    ViewBag.Title = "Farid Cargo | " + ViewBag.TitleSuffix;
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<section id="actions" class="container container-fluid " style="background-color:rgba(243, 240, 240, 0.596); ">
    <div class="row">
        <div class="col-md-3">
            <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#BalanceModal" style="font-size:20px;">
                Balans : @ViewBag.Balance manat
            </button>

        </div>
        <div class="offset-3 col-md-6">
            <ul class="nav justify-content-end">
                <li class="nav-item" style="margin:5px">
                    <span class="btn btn-secondary nav-link">Musteri kodu: @ViewBag.CustomerNumber</span>
                </li>
                <li class="nav-item" style="margin:5px">
                    <a href="/Order/Create" class="btn btn-danger nav-link">Sifaris et</a>
                </li>
                <li class="nav-item" style="margin:5px">
                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#declarationModal" style="font-size:20px;">
                        Beyan et
                    </button>
                </li>
            </ul>
        </div>
        <div class="modal fade" id="BalanceModal" tabindex="-1" role="dialog" aria-labelledby="BalanceModalTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="BalanceModalTitle">Balansi artir</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p class="form-control-item">Senin balansinda @ViewBag.Balance manat pul var </p>
                        <p class="form-control-item">Balansini artirmaq isteyirsenmi? </p>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Xeyr</button>
                        <a href="/Payment/AddToBalance" type="button" class="btn btn-primary">Beli</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade bd-example-modal-lg" id="declarationModal" tabindex="-1" role="dialog" aria-labelledby="declarationModal"
             aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                            @* bura ajax ile content gelir *@
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row" style="margin-top:25px;">
        <div class="col-md-4">
            <div class="list-group">
                @Html.ActionLink("Xaricdeki unvanlar", "Countries", "Manage", routeValues: null, htmlAttributes: new { @class = "list-group-item list-group-item-action list-active" })
                @Html.ActionLink("Sifarislerim", "Index", "Order", routeValues: null, htmlAttributes: new { @class = "list-group-item list-group-item-action" })
                @Html.ActionLink("Tenzimlemeler", "EditPersonalData", "Manage", routeValues: null, htmlAttributes: new { @class = "list-group-item list-group-item-action" })
                @Html.ActionLink("Balans", "ShowTransactions", "Payment", routeValues: null, htmlAttributes: new { @class = "list-group-item list-group-item-action" })
                <a href="/Message/Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    Mesajlar
                    <span class="badge badge-primary badge-pill">@ViewBag.MessagesCounter</span>
                </a>
                <a href="/Inquery/Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    Sorgular
                    <span class="badge badge-primary badge-pill">@ViewBag.InqueriesCounter</span>
                </a>
                @Html.ActionLink("Çıxış", "LogOff", "Account", routeValues: null, htmlAttributes: new { @class = "list-group-item list-group-item-action" })
            </div>

        </div>
        <div class="col-md-8">

           @RenderBody()
       
        </div>
</div>
</section>