@model IEnumerable<LogisticsApp.Models.Order>
@{
    int counter = 1;
}
@if (Model!=null||Model.Count() > 0)
{
    <div class="showonStart">

        <table class="table table-sm table-responsive-sm">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Link</th>
                    <th scope="col">Actions</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    string Link = " ";
                    if (item.Link.Length > 20) { Link = item.Link.Substring(0, 18); }
                    else { Link = item.Link; }
                <tr>
                    <th scope="row">@(counter++)</th>
                    <td>@Link</td>
                    <td>
                        @foreach (var status in item.Statuses)
                        {
                            <span style="font-size:12px; font-weight:normal">@status.Name - @status.CreatedDate.ToString("dd.MM.yyyy HH:mm:ss")</span>
                        }
                    </td>
                    <td>@item.Price @item.valuta.Name </td>
                    <td>@item.Quantity </td>
                    <td>
                        <button type="button" class="btn btn-info btn-sm OrderDetailsBtn" data-toggle="modal" data-target="#OrderDetailsModalLong" data-id="@item.Id">view</button>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

}

