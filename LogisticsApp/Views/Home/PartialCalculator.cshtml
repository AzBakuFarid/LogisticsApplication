@model IEnumerable<LogisticsApp.Models.General.Country>

    <section class="container container-fluid parallax">
        <div id="calculator">
            <div class="row">
                <div class="jumbotronDiv">
                    <h2>K A L K U L Y A T O R</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-xs-12">
                    <div class="row">
                        <div class="col-md-6 col-xs-12">
                            <div class="form-group">
                                <select name="country" id="countryId" class="form-control">
                                    @foreach (var item in Model)
                                    {
                                    <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 col-xs-12">
                            <div class="form-group">
                                <input type="number" class="form-control" id="BundleCount" min="1" step="1" placeholder="Bağlama sayı (məs:1,2,3)" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-xs-12">
                            <div class="form-group">
                                <input type="number" class="form-control" placeholder="Uzunluq (sm)" min="0" step="0.1" id="Length" required>
                            </div>
                        </div>
                        <div class="col-md-6 col-xs-12">
                            <div class="form-group">
                                <input type="number" class="form-control" placeholder="En (sm)" min="0" step="0.1" id="Width" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-xs-12">
                            <div class="form-group">
                                <input type="number" class="form-control" placeholder="Hundurluk (sm)" min="0" step="0.1" id="Height" required>
                            </div>
                        </div>
                        <div class="col-md-6 col-xs-12">
                            <div class="form-group">
                                <input type="number" class="form-control" placeholder="Ceki (sm)" min="0" step="0.1" id="Weight" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <button class="btn btn-secondary" type="button" id="Calculate" >Hesabla</button>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h4>Cemi</h4>
                            <h4>
                                <span id="calculatorResult">0.00 </span>AZN
                            </h4>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <p>
                        burada Siz baglamanizin olculerini daxil edib hemin baglamnin catdirilmasi ucun odemeli olacaginiz meblegi
                        evvelceden oyrene bilersiniz!
                    </p>
                </div>
            </div>
        </div>
    </section>
