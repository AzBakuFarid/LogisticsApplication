@model IEnumerable<LogisticsApp.Models.Page.Search>

@{
    ViewBag.Title = "Search";
    int counter = 1;
}
<div class="container container-fluid">
    @if (Model.Count() > 0)
    {
        <table class="table table-sm table-responsive-sm">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Information</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@(counter++)</th>
                        <td><a href="@item.Link">@(item.Text.Length > 100 ? item.Text.Substring(0, 99) : item.Text )</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="row">
            <div class="offset-2 col-md-8">
                sorgunuza uygun hec bir melumat tapilmadi
            </div>
        </div>}
    </div>
