@model  LogisticsApp.Models.General.StatusViewModel


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
                <input type="hidden" name="Bundle" required value="@Model.Bundle" />
                <div class="form-group">
                    <label class="control-label">Status:</label>
                    <select id="StatusDateInEditMode" class="form-control" name="Name">
                        <option value="">Statuslardan birini secin</option>
                        @foreach (var item in Model.statuses)
                        {
                            <option value="@item.Name">@item.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label">Date:</label>
                    <input type="date" name="CreateDate" id="OrderDate" max="@DateTime.Now.ToString("yyyy-MM-dd")" value="@DateTime.Now.ToString("yyyy-MM-dd")" required class="form-control">
                    <script>
                    document.getElementById("OrderDate").max = new Date().toISOString().split("T")[0];
                    </script>
                </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-secondary">Delete</button>
            </div>
        }



